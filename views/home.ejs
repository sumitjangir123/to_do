<html>

<head>
    <title><%= title%></title>
    <link rel="stylesheet" href="css/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <h1 class="heading">
        TODO APP
    </h1>

    <div class="outer-div">
        <form action="/create-todo" method="POST">

            <div class="row" id="ding-ding">
                <div class="inner-heading">
                    <p>DESCRIPTION <i class="fa fa-info-circle"></i></p>
                </div>
                <input type="text" id="fname" name="description" placeholder="What do you need to do?" autofocus required>
            </div>

            <div class="row">
                <div class="inner-heading">
                    <p>CATEGORY <i class="fa fa-list-alt" aria-hidden="true"></i></p>
                </div>
                <select id="country" name="category" required>
                    <option value="" disabled selected hidden>Choose your category</option>
                    <option value="personal">Personal</option>
                    <option value="School">School</option>
                    <option value="Cleaning">Cleaning</option>
                    <option value="others">Other</option>
                </select>
            </div>


            <div class="row">
                <div class="inner-heading">
                    <p>DUE DATE <i class="fas fa-calendar-edit"></i></p>
                </div>
                <input type="date" id="lname" name="date" placeholder="Your last name.." required>
            </div>


            <div class="buttons">
                <button class="button1 btn_stl" type="submit"><i class="fa fa-tasks" aria-hidden="true"></i> ADD TASK</i></button>
                <button class="button2 btn_stl"><i class="fa fa-trash"></i> DELETE TASKS </button>
            </div>
        </form>

        <ul>
            <% for(let i of task_list) {%>
            <li>
                <div class="list">
                    <p>Description : <%=i.description%> </p>
                    <p>Category : <%=i.category%></p>
                    <p>Date : <%=i.date%></p>
                </div>
            </li>
            <%}%>
        </ul>

    </div>
</body>

</html>